{
	"plugins": ["./node_modules/prettier-plugin-tailwindcss", "./node_modules/prettier-plugin-astro"],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	],
	"astroAllowShorthand": false,
	"bracketSpacing": true,
	"jsxSingleQuote": false,
	"quoteProps": "consistent",
	"semi": true,
	"singleQuote": false,
	"tabWidth": 2,
	"trailingComma": "all",
	"printWidth": 120,
	"useTabs": true
}
