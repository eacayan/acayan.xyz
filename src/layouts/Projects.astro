---
import ProjectCard from "../components/ProjectCard.astro";

import { PROJECT_ITEMS } from "../constants";
---

<section class="flex flex-col gap-y-6 h-screen snap-start">
	<h2 class="flex text-center justify-center text-gold mt-10 text-[2.5rem]">Selected Projects</h2>

	<div class="container flex flex-col gap-y-8 p-5 md:flex-row md:gap-x-8">
    {PROJECT_ITEMS.map((projects) => (
      <ProjectCard projects={projects} />
    ))}
	</div>
</section>
