---
import { Icon } from "astro-icon";
import Header from "../components/Header";

const res = await fetch(import.meta.env.PUBLIC_VISITOR_COUNT_API);
const data = await res.json();
const visits = data.body?.visits;
---

<section
	id="home"
	class="flex flex-col relative items-center justify-between h-screen overflow-hidden gradient-bg md:justify-start md:gap-y-[25%]"
>
	<Header client:load />
	<div class="flex flex-col relative items-center justify-center mt-24 md:mt-0 md:w-full md:flex-row md:justify-around">
		<div class="flex flex-col items-center md:items-start">
			<h1 class="text-gold font-semibold text-[2.875rem] md:text-[3.4375rem] lg:text-[4rem]">Ellice Acayan</h1>
			<div class="flex flex-col gap-4 text-white text-center pt-6 md:text-xl md:text-left md:pt-3">
				<p class="text-xl pb-2 lg:text-3xl">Software Developer</p><p class="text-sm lg:text-2xl">
					I can build your next app. Can't fix your TV though.
				</p>
				<span class="text-white flex self-start items-center gap-2 text-sm">
					<Icon name="lucide:eye" class="w-4 h-4" />{visits}
					
					</div>
				</span>
			</div>
		</div>
		<img src="icons/logo.svg" alt="Ellice Acayan Logo" class="hidden md:block md:w-64 md:-ml-10 lg:w-80" />
		<div class="group flex items-center space-x-4 mt-6 md:flex-col md:space-x-0 md:space-y-5 md:mt-0">
			<a href="https://www.github.com/eacayan" target="_blank">
				<Icon name="lucide:github" class="clickable-icon w-6 h-6 md:w-8 md:h-8" />
			</a>
			<a href="https://www.linkedin.com/in/ellice-acayan/" target="_blank">
				<Icon name="lucide:linkedin" class="clickable-icon w-6 h-6 md:w-8 md:h-8" />
			</a>
			<a href="mailto:acayanellice@gmail.com" target="_blank">
				<Icon name="lucide:mail" class="clickable-icon w-6 h-6 md:w-8 md:h-8" />
			</a>
		</div>
	</div>
	<div
		class="relative w-[50px] h-[90px] mb-[120px] opacity-50 border-2 border-zinc-400 rounded-3xl before:absolute before:bottom-3 before:left-1/2 before:w-6 before:h-6 before:-translate-x-1/2 before:bg-zinc-400 before:rounded-full before:opacity-100 before:animate-scroll md:hidden"
	>
	</div>
</section>
