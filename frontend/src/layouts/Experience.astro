---
import { Icon } from "astro-icon";

import ExperienceTimeline from "../components/ExperienceTimeline.astro";
---

<section id="experience" class="flex flex-col justify-center items-center px-6 pt-8 pb-20 gap-y-6 md:px-10 lg:px-16 lg:pt-10 lg:pb-24 lg:gap-y-10 xl:px-28">
	<h2 class="flex text-center justify-center text-gold text-[2.5rem] lg:text-[3.5rem]">Experience</h2>
  <ExperienceTimeline />
  <a href="files/resume.pdf" download class="relative group inline-flex items-center py-2 px-4 text-sm font-medium text-gray-400 bg-black rounded-lg hover:text-white transition-colors duration-200 md:text-base lg:text-xl">
    <div class="absolute -inset-0.5 bg-gray-500 rounded-lg blur opacity-70 group-hover:opacity-100 transition duration-1000 group-hover:duration-200 -z-10"></div>
    <Icon name="mdi:file-download-outline" class="w-4 mr-1 md:mr-2 lg:w-6 lg:mr-3" />
    Download Resume
  </a>
</section>
